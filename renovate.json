{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enableRenovate",
    "config:recommended",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":separatePatchReleases",
    "docker:enableMajor",
    ":enablePreCommit",
    "github>j0sh3rs/k3s-at-home//.github/renovate/autoMerge",
    "github>j0sh3rs/k3s-at-home//.github/renovate/labels"
  ],
  "semanticCommits": "enabled",
  "gitAuthor": "Barrybot <barry-bot[bot]@users.noreply.github.com>",
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "rebaseWhen": "auto",
  "timezone": "America/New_York",
  "ignorePaths": [
    "cluster/base/"
  ],
  "github-actions": {
    "fileMatch": [
      "^(workflow-templates|\\.github\\/workflows)\\/[^/]+\\.ya?ml$",
      "(^|\\/)action\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(cluster|bootstrap)/.+/helm-release\\.yaml$"
    ]
  },
  "helmv3": {
    "fileMatch": [
      "charts/.+/Chart\\.yaml$",
      "(cluster|bootstrap)/base-custom/charts/*.yaml"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(cluster|bootstrap)/.+\\.yaml$"
    ]
  },
  "kustomize": {
    "fileMatch": [
      "(cluster|bootstrap)/.+/(^|/)kustomization\\.ya?ml$"
    ],
    "pinDigests": false
  },
  "flux": {
    "fileMatch": [
      "cluster/.+/*.yaml$",
      "bootstrap/.+/*.yaml$"
    ]
  },
  "github-releases": {
    "fileMatch": [
      "cluster/.*/*.yaml$",
      "bootstrap/.+/*.yaml$"
    ]
  },
  "regexManagers": [
    {
      "datasourceTemplate": "{{datasource}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}{{#if (containsString datasource 'pypi')}}pep440{{else}}semver{{/if}}{{/if}}",
      "fileMatch": [
        "^(cluster|bootstrap)/.*\\.yaml$"
      ],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*?)\n",
        "registryUrl=(?<registryUrl>.*?) chart=(?<depName>.*?)\n *tag: (?<currentValue>.*?)\n",
        "datasource=(?<datasource>github-releases) repos=(?<depName>\\S+)\n.*?\"?(?<currentValue>[^-\\s]*?)\"?\n",
        "datasource=(?<datasource>docker) image=(?<depName>\\S+)\n.*?\"?(?<currentValue>[^-\\s]*?)\"?\n",
        "registryUrl=(?<registryUrl>.*?)\n *tag: (?<depName>[a-z-]+)-(?<currentValue>.*?)\n",
        "datasource=(?<datasource>helm) registryUrl=(?<registryUrl>\\S+) chart=(?<depName>\\S+)\n.*?\"?(?<currentValue>[^-\\s]*?)\"?\n"
      ]
    },
    {
      "description": "Process raw GitHub URLs",
      "fileMatch": ["(cluster|bootstrap)/.+\\.ya?ml$"],
      "matchStrings": [
        "https:\\/\\/raw.githubusercontent.com\\/(?<depName>[\\w\\d\\-_]+\\/[\\w\\d\\-_]+)\\/(?<currentValue>[\\w\\d\\.\\-_]+)\\/.*"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": [
        "cluster/crds/kube-prometheus-stack/.+\\.yaml$"
      ],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *tag: (?<depName>[a-zA-Z-]+)-(?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
